<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/artist_row_height"
    android:padding="6dp">

    <TextView
        android:id="@+id/textView_trackName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/textSizeLarge"
        app:layout_constraintEnd_toStartOf="@id/textView_listeners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Super Cool Amazing Track" />

    <TextView
        android:id="@+id/textView_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:autoLink="web"
        android:ellipsize="none"
        android:lines="1"
        android:textSize="@dimen/textSizeSmall"
        app:layout_constraintEnd_toStartOf="@id/textView_listeners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_trackName"
        tools:text="Super Cool Amazing Band" />

    <TextView
        android:id="@+id/textView_length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:lines="1"
        android:textSize="@dimen/textSizeLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_trackName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="16:76" />
</androidx.constraintlayout.widget.ConstraintLayout>