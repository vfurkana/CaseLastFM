<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentSavedAlbums">

    <fragment
        android:id="@+id/fragmentSavedAlbums"
        android:name="com.vfurkana.caselastfm.view.albumssaved.SavedAlbumsFragment"
        android:label="SavedAlbumsFragment"
        tools:layout="@layout/fragment_saved_albums">
        <action
            android:id="@+id/action_saved_to_detail"
            app:destination="@id/fragmentAlbumDetail" />
        <action
            android:id="@+id/action_saved_to_search"
            app:destination="@id/fragmentArtistSearch" />
    </fragment>

    <fragment
        android:id="@+id/fragmentArtistSearch"
        android:name="com.vfurkana.caselastfm.view.artistsearch.ArtistSearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search_artist">
        <action
            android:id="@+id/action_search_to_detail"
            app:destination="@id/fragmentAlbumDetail" />
    </fragment>

    <fragment
        android:id="@+id/fragmentAlbumDetail"
        android:name="com.vfurkana.caselastfm.view.albumdetail.AlbumDetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_album_detail" />

</navigation>